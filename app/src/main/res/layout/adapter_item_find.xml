<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_category_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_66"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/text_black_33"
        android:textSize="@dimen/text_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_bottom_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="182人浏览"
            android:textColor="@color/text_black_99"
            android:textSize="@dimen/text_small" />

        <CheckBox
            android:id="@+id/tv_bottom_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:drawableStart="@drawable/icon_heart_selector"
            android:gravity="center"
            android:textColor="@color/text_black_99"
            android:textSize="@dimen/text_small" />


        <TextView
            android:id="@+id/tv_bottom_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_bottom_star"
            android:drawableStart="@drawable/icon_chat"
            android:gravity="center"
            android:textColor="@color/text_black_99"
            android:textSize="@dimen/text_small" />


    </RelativeLayout>

</LinearLayout>